<div class="row">
  <div class="checkout-summary small-centered small-12 medium-8 columns">
    <div class="checkout-summary-title">
      <h5>Your Order</h5>
    </div>
    <form action="/listings/{{listing_id}}/checkout" method="POST">
    <div class="checkout-summary-item">
      <img src="https://placeimg.com/100/80/any" />
      <div class="item-name">
        <p><span class="title">Vehicle: </span>M</p>
        <p><span class="title">Color: </span>Blue</p>
        <p><span class="title">Size: </span>M</p>
      </div>
      <div class="item-price">
        <p class="title">$24.99</p>
      </div>
    </div>
    <div class="checkout-summary-details">
      <div class="left">
        <p><strong>Per Day:</strong></p>
        <p><strong>Number of Days: </strong></p>
        <p><strong>Total: </strong></p>
      </div>
      <div class="right">
        <p>${{results.price}}</p>
        <p>{{days}}</p>
        <p>${{price}}</p>
      </div>
    </div>
    <button type="submit" class="button expanded">Submit Order</button>
    <button class="button"><a style="text-decoration:none" href="/listings">Back to Listings</a></button>
  </div>
  </form>
</div>