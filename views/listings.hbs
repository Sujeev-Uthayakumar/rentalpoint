
{{#if results}}
  <div class="callout large">
    <div class="row column text-center">
      <h1>Search - Rental Point</h1>
      <p class="lead">These listings are based on your account location, for different options change your profile settings.</p>
    </div>
  </div>
  {{#if isSeller}}
  
  <div class="reveal" id="modal" data-reveal>
<form>
    <h3>Add a Listing</h3>
       <div class="row">
      <label class="columns small-6">Manufacturer</label>
       <label class="columns small-6">Model</label>
      <div class="columns small-6">
        <input type="text" name="manufacturer" placeholder="Manufacturer">
      </div>
     
      <div class="columns small-6">
        <input type="text" name="model" placeholder="Model">
      </div>
    </div>
    <div class="row">
      <div class="columns small-6">
        <label>Year
        <input type="Number" name="year" placeholder="Year">
        </label>
      </div>
      
      
        <div class="columns small-6">
          <label>Location
            <select name="country">
                <option value="None">None</option>
                <option value="Canada">Canada</option>
                <option value="United States">United States</option>
                <option value="Mexico">Mexico</option>
                <option value="United Kingdom">United Kingdom</option>
                <option value="India">India</option>
                <option value="China">China</option>
              </select>
          </label>
        </div>
      
    </div>
    <div class="row columns">
      <label>Property Type
        <select name="status" type="text">
          <option>Any</option>
          <option value="office">Office</option>
          <option value="building">Building</option>
        </select>
      </label>
    </div>
    <div class="row columns">
      <label>Location
        <input type="text" name="location" placeholder="Any">
      </label>
    </div>
    <div class="row">
      <label class="columns small-12">Price</label>
      <div class="columns small-6">
        <input type="number" min="0" name="min" placeholder="Min">
      </div>
      <div class="columns small-6">
        <input type="number" min="0" name="max" placeholder="Max">
      </div>
    </div>
    <button type="button" class="primary button expanded search-button">
      Add Listing
    </button>
 </form>

    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
  </button>
</div>

  <div class="row">
      <div class="small-4 medium-2 right-align columns">
        <button data-open="modal"type="button" class="success button"><a style="color: inherit"><i class="fas fa-plus"></i> Add Listing</a></button>
    </div>
  </div>
  {{/if}}
  {{#each results}}
    <div class="row large-12 columns">
<div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">{{location}}</h5>
      </div>
    </div>  
  </div>

  <div class="travel-feature-card-details">
    <h6 class="travel-feature-card-date-range">Avaliability: {{avaliable_start}} - {{avaliable_end}}</h6>
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
          <div class="small-4 medium-2 columns">
            <img class="travel-feature-card-image" src="https://unsplash.it/600/600/?image=1081" alt="">
          </div>
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title">{{manufacturer}} {{model}} {{car_year}}</h6>
          <p>Host: {{fname}} {{lname}}
            <br />
            Date Posted:
            {{datecreated}}
            <br />Seats:
            {{seats}}
            Condition:
            {{state}}/10</p>          
            </div>
        </div> 
      </div>

      <div class="small-12 medium-3 columns travel-feature-card-price">
        <h6>${{price}}</h6>
        <p class="travel-feature-card-price-subtext">/ Day</p>
      </div>
    </div> 
  </div>
</div>
    </div>

  {{/each}}
{{else}}
  <div class="callout large">
    <div class="row column text-center">
      <h1>Search - Rental Point</h1>
      <p class="lead">Sorry no items matching your search criteria, try another
        search! We have other great listings on our site.</p>
    </div>
  </div>
{{/if}}



