<div class="row">

  <div class="medium-7 large-6 columns">
    <h1>For All Your Car Rental Needs - RentalPoint</h1>
    <p class="subheader">Find the perfect car to conquer any occasion. From laid
      back city driving to exploring the great outdoors. We have a car to fit
      any need!</p>
    <button class="button"><a class="menu-text" href="/listings">Take a Look</a></button>
    <button class="button"><a class="menu-text" href="/register">Join Now</a></button>
  </div>

  <div class="medium-5 large-3 columns">
    <div class="callout secondary">
      <form>
        <div class="row">
          <div class="small-12 columns">
            <label>Find Your Dream Car Rental
              <input type="text" placeholder="Search location" />
            </label>
          </div>
          <div class="small-12 columns">
            <label>Number of Seats
              <input type="number" placeholder="Seats required" />
            </label>
            <button type="submit" class="button">Search Now!</button>
          </div>
        </div>
      </form>
    </div>
  </div>

</div>

<div class="row column">
  <hr />
</div>

<div class="row column">
  <p class="lead">Recently Added Listings</p>
</div>

<div class="row small-up-1 medium-up-2 large-up-3">
  {{#each results}}
    <div class="column">
      <div class="callout">
        <p>{{manufacturer}} {{model}} {{car_year}}</p>
        <p><img
            src="https://placehold.it/400x370&text=Pegasi B"
            alt="image of a planet called Pegasi B"
          /></p>
        <p class="lead">
          {{fname}}
          {{lname}},
          {{location}}</p>
        <p class="subheader">
          Key Info: Seats:{{seats}}
          Condition:{{state}}
        </p>
      </div>
    </div>
  {{/each}}
</div>