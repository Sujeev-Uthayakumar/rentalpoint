{{#if errorMessage includeZero=true}}
<div class="callout alert">
  <h5>{{{errorMessage}}}</h5>
  <a href="#">Please make the necessary changes</a>
</div>
{{/if}}
<div class="row align-center">
  <div class="work-feature-block row">
    <div class="columns medium-6">
      <img
        class="work-feature-block-image"
        src="https://wallpaperaccess.com/full/112906.jpg"
      />
    </div>
    <div class="product-details column medium-6 center-text-for-small-only">
      <h1>{{results.manufacturer}} {{results.model}} {{results.car_year}}</h1>
      <p class="product-description">Details: <br>
      Host Name: <br>
      Host Email: <br>
      Seats: <br>
      Condition: <br>
      </p>
      <div class="row">
        <div class="column small-12 large-6">
        </div>
        <div class="column small-12 large-12">
          <form
            action="/listings/{{results.listing_id}}"
            method="POST"
            class="product-option-selection"
          >
            <input
              id="calendar"
              name="calendar"
              class="form-control"
              placeholder="Select DateTime"
              required
            />

        </div>
      </div>
      <div class="product-details-add-to-cart">
        {{#if isAvaliable}}
        <p><span style="color: #b43617"class="out-stock">Not In Stock</span>
        <span class="dim-text">(Avaliable until {{endDate}})</span></p>
        {{else}}
        <p><span class="in-stock">In Stock</span>
        <span class="dim-text">(Avaliable until {{endDate}})</span></p>
        {{/if}}
        <hr />
        <p class="price">${{results.price}}/Day</p>
        <p> <span>Qty:</span> <input class="qty" type="text" value="1" /> </p>
        <button type="submit" class="button expanded">Proceed to Checkout</button>
      </div>
    </div>
  </div>
</div>
</form>